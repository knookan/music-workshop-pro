{
  "name": "measury",
  "version": "0.1.5",
  "description": "A lightweight library for estimating text width and height in non-browser environments",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./fonts/*": {
      "types": "./lib/fonts/*.d.ts",
      "import": "./lib/fonts/*.js",
      "default": "./lib/fonts/*.js"
    }
  },
  "typesVersions": {
    "*": {
      "fonts/*": [
        "lib/fonts/*"
      ]
    }
  },
  "sideEffects": false,
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "dev": "npx serve test-browser -p 8090",
    "build": "tsc",
    "prebuild": "rm -rf lib",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "extract": "tsx scripts/extract-font.ts",
    "ci": "run-p lint test build"
  },
  "keywords": [
    "text",
    "width",
    "height",
    "measure",
    "font",
    "typography",
    "text-metrics"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aarebecca/measury.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.2",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "opentype.js": "^1.3.4",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
